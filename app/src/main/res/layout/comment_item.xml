<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_comment_list"
        android:layout_below="@+id/tv_watch_comment_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_comment_head"
            android:src="@drawable/ic_person_outline_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_comment_username"
            android:layout_toRightOf="@+id/iv_comment_head"
            android:text="用户名"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_toRightOf="@+id/tv_comment_username"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="发布于"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_comment"
            android:layout_toRightOf="@+id/iv_comment_head"
            android:layout_below="@+id/tv_comment_username"
            android:layout_marginLeft="5dp"
            android:text="这里是评论内容"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <View
        android:layout_below="@+id/iv_comment_head"

        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    </RelativeLayout>
